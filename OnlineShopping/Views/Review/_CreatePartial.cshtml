@model OnlineShopping.Models.Review

@{
    var ProductId = int.Parse(ViewData["ProductId"].ToString());
}

<h1 class="text-center">Add Your Review</h1>
@using (Html.BeginForm("Create", "Review", new { id = ProductId }, FormMethod.Post, new { style = "padding-left:410px;" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                <input type="text" class="form-control" placeholder="Rate   .../5" value="" id="Rate" name="Rate" autocomplete="off" />
                @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control", placeholder = "Your Comment", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pros, new { htmlAttributes = new { @class = "form-control", placeholder = "Pros", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Pros, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cons, new { htmlAttributes = new { @class = "form-control", placeholder = "Cons", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Cons, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Review" class="btn btn-primary" style="margin-left:-35px;" />
            </div>
        </div>
    </div>
}